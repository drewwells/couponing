- var processMore = !count;
include includes/head
link(rel='stylesheet', href='/css/coupon.css')
body
  div.center
    a.number(href='/progress') Number of Coupons: #{count}

  button.all Mark all & Refresh!
  table
    thead
      tr
        //th
        th Site
        th Code
        th Title
        th Expiration
        th Tier
      each coupon in coupons
        td.hidden
          button(id=coupon._id).submit submit
        if coupon.tier
          tr.highlight
            td #{coupon.Site}
            td #{coupon.Code}
            td #{coupon.Title}
            td #{coupon.Expires}
            td #{coupon.tier}
        else
          tr
            td #{coupon.Site}
            td #{coupon.Code}
            td #{coupon.Title}
            td #{coupon.Expires}
            td #{coupon.tier}
  #{processMore}
  if processMore
    a(href='/progress') Out of Coupons, Process more!
block content
  section(data-ng-view)

script(type='text/javascript', src='/js/jquery-2.0.3.min.js')
script(type='text/javascript', src='/js/footer.js')

