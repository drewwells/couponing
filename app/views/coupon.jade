
extends layouts/shark-layout

block head
  title Submit Some Coupons!

block content
  div.center
    a.number(href='/progress') Number of Coupons: #{count}

  button.all Mark all & Refresh!
  table
    thead
      tr
        //th
        th Site
        th Code
        th Title
        th Expiration
        th Tested
        th Tier
      each coupon in coupons
        td.hidden
          button(id=coupon._id).submit submit
        if coupon.tier
          tr.highlight
            td #{coupon.Site}
            td #{coupon.Code}
            td #{coupon.Title}
            td #{coupon.Expires}
            td #{coupon.Tested}
            td #{coupon.tier}
        else
          tr
            td #{coupon.Site}
            td #{coupon.Code}
            td #{coupon.Title}
            td #{coupon.Expires}
            td #{coupon.Tested}
            td #{coupon.tier}

- var processMore = !count;
  if processMore
    a(href='/progress') Out of Coupons, Process more!

script(type='text/javascript', src='/js/jquery-2.0.3.min.js')
script(type='text/javascript', src='/js/footer.js')

